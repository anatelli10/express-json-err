{
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "dist",
		"paths": {
			// compatibility future proofing: esm import in .ts files
			"*": ["node_modules/*/index"]
		},
		"target": "ES2022",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		"strict": true,
		"skipLibCheck": true
	},

	"exclude": ["**/*.test.ts"]
}
